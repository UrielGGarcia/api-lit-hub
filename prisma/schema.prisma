generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------
//  ENUMS
// ---------------------------------------------
enum Roles {
  ADMIN
  AUTHOR
  CLIENT
}

enum FileTypes {
  EPUB
  PDF
  COVER
}

enum PurchaseStatus {
  PENDING
  PAID
  FAILED
}

model User {
  id              Int      @id @default(autoincrement())
  rol             Roles    @default(CLIENT)
  nombre          String
  apellidoPaterno String
  apellidoMaterno String?
  email           String   @unique
  password        String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relaciones
  books     Book[]     @relation("AuthorBooks")
  ratings   Rating[]
  comments  Comment[]
  purchases Purchase[]
  userBooks UserBook[]

}

model Book {
  id       Int     @id @default(autoincrement())
  title    String
  sinopsis String
  price    Decimal @db.Decimal(10, 2)
  idioma   String

  published Boolean @default(false)
  hasCover  Boolean @default(false)
  hasPdf    Boolean @default(false)
  hasEpub   Boolean @default(false)

  stripeProductId String?
  stripePriceId   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relación con autor
  authorId Int
  author   User @relation("AuthorBooks", fields: [authorId], references: [id], onDelete: Cascade)

  // Relaciones
  files     File[]
  ratings   Rating[]
  comments  Comment[]
  purchases Purchase[]
  genres    Genre[]    @relation("BookGenres")
  userBooks UserBook[]

}

model Genre {
  id    Int    @id @default(autoincrement())
  name  String @unique
  books Book[] @relation("BookGenres")
}

model File {
  id       Int       @id @default(autoincrement())
  name     String
  fileType FileTypes
  mimeType String
  urlFile  String
  bookId   Int?
  book     Book?     @relation(fields: [bookId], references: [id], onDelete: Cascade)

  // Evita archivos duplicados del mismo tipo por libro
  @@unique([bookId, fileType])
}

model Rating {
  id     Int @id @default(autoincrement())
  value  Int
  userId Int
  bookId Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  // Cada usuario puede calificar un libro solo una vez
  @@unique([userId, bookId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int
  bookId    Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
}

model Purchase {
  id              Int            @id @default(autoincrement())
  purchaseDate    DateTime       @default(now())
  priceAtPurchase Decimal        @db.Decimal(10, 2)
  userId          Int
  bookId          Int
  status          PurchaseStatus @default(PAID)

  stripeSessionId       String?
  stripePaymentIntentId String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  book Book @relation(fields: [bookId], references: [id], onDelete: Cascade)

  // Evita compras duplicadas del mismo libro por usuario
  @@unique([userId, bookId])

  // Evita que el mismo libro se inserte dos veces con la misma sesión
  @@unique([stripeSessionId, bookId])
}


model UserBook {
  id        Int      @id @default(autoincrement())
  userId    Int
  bookId    Int
  createdAt DateTime @default(now())

  user   User  @relation(fields: [userId], references: [id])
  book   Book  @relation(fields: [bookId], references: [id])

  @@unique([userId, bookId])
}

